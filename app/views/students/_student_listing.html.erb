<table class="table table-condensed table-hover">
  <tr>
    <th>Name</th>
    <th>Student Number</th>
    <th class="text-center">Grade</th>
    <th class="text-center">ODRs</th>
    <th>&nbsp;</th>
  </tr>
  <% @students.each do |s| %>
    <tr>
      <td><%= s.to_s %></td>
      <td><%= s.student_number %></td>
      <td class="text-center"><%= s.grade %></td>
      <td class="text-center"><%= link_to_unless s.office_direct_referrals.size == 0, s.office_direct_referrals.size, odr_by_student_path(s) %></td>
      <td><%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_student_path(s) %></td>
    </tr>
  <% end %>
</table>
