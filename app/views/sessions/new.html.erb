<div class="row login">
  <div class="col-md-12 text-center">
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email], autofocus: true, size: 40 %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, size: 40 %>
      </div>
      <div>
        <%= submit_tag "Log In", class: 'btn btn-primary submit' %>
      </div>
      <p><%= link_to "I forgot my password", new_password_reset_path %></p>
    <% end %>
  </div>
</div>
