<div class="main" id="detention_dates">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <% @dd = @detention_dates[date].try(:first) %>
    <%= date.day %>
    <% if @dd %>
      <p class="text-center">
      <% if @dd.blacked_out %>
        <span class="glyphicon glyphicon-remove red"></span>
      <% else %>
        <button id="<%= @dd.id %>" class="btn btn-default blackout" data-toggle="tooltip" data-placement="bottom" title="Double click to blackout.">
          <span class="glyphicon glyphicon-ok green"></span>
        </button>
      <% end %>
      <% if @dd.detentions.size > 0 %>
        <button class="btn btn-default show" data-id="<%= @dd.id %>" data-toggle="tooltip" data-placement="bottom" title="Click to see detention list.">
          <%= @dd.detentions.size %>
        </button>
      <% end %>
      </p>
    <% end %>
  <% end %>
</div>
